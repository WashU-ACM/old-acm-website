<!DOCTYPE html>
<html>
<head>
  <title>ACM</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

 <!--navigation -->
 <div class = "nav_container">
  <ul class="nav nav-tabs">

      <!--<img src="ACM-logo-dark1.png" alt="rss feed" style = "float: left; height: 40px; width: 90px;"/> -->
      <li><a class = nav_link href="/">Home</a></li>
      <li><a class = nav_link href="/projects">Projects</a></li>
      <li><a class = nav_link href="/calendar">Calendar</a></li>
      <li><a class = nav_link href="https://portfolio.wustl.edu/organization/acm" target="_blank">Portfolio</a></li>
      
      <% if current_user %>
	<div class="login" >Welcome, <%= current_user.first_name %></br>
	<%= link_to "Sign out", signout_path %> | <%= link_to "My Profile", current_user %>		
	</div>
      <% else %>
	<div class="login" ><%= link_to "Sign in with Google", "/auth/google" %></div>
	<div class="login" ><%= link_to "Sign in with WUSTL Key", "/auth/shibboleth" %></div>
      <% end %>

    </ul>
  </div>

  <!-- end navigation -->

  <div class = 'container'>
    <div class = 'row'>
    
     
      
	  <div class = 'span7'>
	  <!-- content -->
	  
	  <%= yield %>
	  
	  </div>

	  <div class = 'span3' id = "sidebar">
	
