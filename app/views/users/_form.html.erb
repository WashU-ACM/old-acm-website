<%= form_for current_user, :html => { :class => 'form-horizontal' } do |f| %>
  
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
 
  <div class="control-group">
    <%= f.label :personal_bio, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :personal_bio, :class => 'text_area', :rows => 4 %>
    </div>
  </div>
 
  <div class="control-group">
    <%= f.label :Technologies, :class => 'control-label' %>
    <%= hidden_field_tag "user[technology_ids][]", nil %>
    <% Technology.all.each do |technology| %>
    <div class="controls">
      <label>
        <%= check_box_tag "user[technology_ids][]", technology.id, @user.technology_ids.include?(technology.id) %>
        <%= technology.name %>
      </label>
     </div>
     <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "Destroy User", user_path, :class => "btn btn-danger", confirm: "Are you sure?  All of your posts and projects will also be deleted.", method: "delete" %>
  </div>
<% end %>
