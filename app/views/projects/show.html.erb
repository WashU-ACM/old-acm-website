<%- model_class = Project -%>
<div class="page-header">
  <h1><%= @project.name %></h1>
</div>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= markdown(@project.description) %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @project.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner_id) %>:</strong></dt>
  <dd><%= User.find(@project.owner_id).first_name %></dd>
  <dt><strong>Desired Technologies<%=  %>:</strong></dt>
  <dd>
     <% @project.technologies.each do |t| %>
      <li><%= t.name %></li>
    <% end %>
  </dd>

  <dt><strong>Interested Users<%=  %>:</strong></dt>
  <dd>
     <% @project.enthusiasts.each do |u| %>
      <li><%= link_to  u.first_name+" "+u.last_name, u %></li>
    <% end %>
  </dd>
  
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              projects_path, :class => 'btn'  %>
 
<% if current_user %>
  <% if !@project.enthusiast_ids.include?(current_user.id)%>
    <%= link_to 'Express interest', interest_project_path(@project), :class => 'btn' %>
  <% else %>
  <%= link_to 'Delete interest', interest_project_path(@project), :class => 'btn' %>
  <% end %>
<% end %>

 <% if current_user && current_user.id == @project.owner_id %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_path(@project), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_path(@project),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>

</div>
