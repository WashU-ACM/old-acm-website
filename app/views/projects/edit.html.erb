<%- model_class = Project -%>
<div class="page-header">
  <%= image_tag @project.image_url.to_s, class: "img-polaroid acm-project-image-header pull-left" %>
  <h2><%= @project.name %></h2>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_path(@project),
              :method => 'delete',
              :data => { :confirm => 'Are you sure you want to permanently delete your project listing?  Consider setting the state of your project to "inactive" instead of deleting it.' },
              :class => 'btn btn-danger' %>
</div>
<%= render :partial => 'form' %>
