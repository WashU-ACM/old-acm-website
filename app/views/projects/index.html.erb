<h2>Projects</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
	<td><%= project.name %></td>
        <td><%= link_to 'View Project', project %>&nbsp;</td>
        <% if current_user && project.owner_id == current_user.id %>
        <td>| <%= link_to 'Edit', edit_project_path(project) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

